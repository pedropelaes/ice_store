generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  CANCELED
  SHIPPED
}

enum SessionStatus {
  ACTIVE
  COMPLETED
  EXPIRED
  CANCELED
}

enum ProductStatus {
  ACTIVE
  PENDING
  DEACTIVATED
}

enum Size {
  P
  M
  G
  GG
  XG
  UNIC
}

// User-related

model User {
  id              Int         @id @default(autoincrement())
  name            String      
  lastName        String
  email           String      @unique
  passwordHash    String?
  cpf             String      @unique
  birthDate       DateTime    @db.Date
  role            Role        @default(USER)
  emailVerified   DateTime?
  createdAt       DateTime    @default(now())

  // relations
  orders            Order[]
  cart              Cart?
  products          Product[]
  checkoutSessions  CheckoutSession[]
  addresses         Address[]
  paymenthMethods   PaymentMethod[]
}

model VerificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model Cart{
  id              Int           @id @default(autoincrement())
  updatedAt       DateTime      @default(now())

  // relations
  client          User          @relation(fields: [user_id], references: [id])
  user_id         Int           @unique
  cartItems       CartItem[]
}

model CartItem {
  id              Int           @id @default(autoincrement())
  quantity        Int           
  unit_price      Decimal
  size            Size

  // relations
  cart            Cart          @relation(fields: [cart_id], references: [id])
  cart_id         Int
  product         Product       @relation(fields: [product_id], references: [id])
  product_id      Int
}

model Address {
  id              Int           @id @default(autoincrement())
  street          String
  number          String
  city            String
  state           String
  zip_code        String
  country         String
  is_default      Boolean       @default(false)

  // relations
  client          User          @relation(fields: [user_id], references: [id])
  user_id         Int           
}

model PaymentMethod {
  id              Int           @id @default(autoincrement())
  provider        String
  last4           String
  brand           String
  token           String

  // relations
  client          User          @relation(fields: [user_id], references: [id])
  user_id         Int           
}

// Product-related

model Product {
  id              Int           @id @default(autoincrement())
  name            String      
  description     String
  image_url       String
  price           Decimal
  discount_price  Decimal?      // Aquele campo que adicionamos antes
  created_at      DateTime      @default(now())
  active          ProductStatus @default(PENDING)
  totalStock      Int           @default(0)
  launched_at     DateTime?
  weight Decimal?
  length Decimal?
  width Decimal? 
  height Decimal? 

  // relations
  admin           User          @relation(fields: [created_by], references: [id])
  created_by      Int
  category        Category[]
  items           ProductItem[] 
  orderItems      OrderItem[]
  cartItems       CartItem[]
}

model ProductItem {
  id            Int      @id @default(autoincrement())
  size          Size
  quantity      Int     
  
  product       Product  @relation(fields: [product_id], references: [id])
  product_id    Int

  // Garante que n√£o possa ter dois registros de "Camiseta Azul Tamanho P" duplicados
  @@unique([product_id, size]) 
}

model Category{
  id            Int           @id @default(autoincrement())
  name          String        @unique
  
  products      Product[]
}

model Order{
  id            Int           @id @default(autoincrement())
  status        OrderStatus       @default(PENDING)
  total_gross   Decimal       
  total_final   Decimal
  orderedAt     DateTime      @default(now())

  // relations
  client        User          @relation(fields: [user_id], references: [id])
  user_id       Int
  orderItems    OrderItem[]
}

model OrderItem {
  id            Int           @id @default(autoincrement())
  quantity      Int
  unit_price    Decimal
  size          Size

  // relations
  order         Order          @relation(fields: [order_id], references: [id])
  order_id      Int 
  product       Product        @relation(fields: [product_id], references: [id])
  product_id    Int     
}

model CheckoutSession {
  id            Int           @id @default(autoincrement())
  status        SessionStatus @default(ACTIVE)
  expires_at    DateTime      

  // relations
  user_id       Int
  client        User          @relation(fields: [user_id], references: [id])
}





